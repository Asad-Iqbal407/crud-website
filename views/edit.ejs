<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Edit Item</title>
</head>
<body>
    <div class="container">
        <h1>Edit Item</h1>
        <form action="/edit/<%= item._id %>" method="POST">
            <div class="form-group">
                <label for="firstname">Firstname</label>
                <input type="text" class="form-control" id="firstname" name="firstname" value="<%= item.firstname %>" required>
            </div>
            <div class="form-group">
                <label for="lastname">Lastname</label>
                <input type="text" class="form-control" id="lastname" name="lastname" value="<%= item.lastname %>" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="address" value="<%= item.address %>" required>
            </div>
            <button type="submit" class="btn btn-success">Update Item</button>
        </form>
        <a href="/" class="btn btn-secondary mt-3">Back</a>
    </div>
</body>
</html>
